pipeline {
    agent {label 'ansible'}
    
    stages {
        stage('Deploy Web application') {
            steps {
                echo "========== DEPLOY WEB APP START =========="
                sh "ip -4 a"
                sh "ansible --version"
                ansiblePlaybook(
                    vaultCredentialsId: 'AnsibleVault', 
                    inventory: 'inventory.yaml', 
                    playbook: 'start_web.yaml'
                )
            }
        }
    }
}
